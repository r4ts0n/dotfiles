[alias]
	# branch
	br = branch
	# checkout
	co = checkout
	# clone
	cl = clone
	clr = clone --recursive
	# commit
	amend = commit --amend --no-edit
	amendx = commit --amend --no-edit --reset-author
	ca = commit --amend
	ci = commit
	# daemon
	serve = daemon --base-path=. --export-all --reuseaddr --verbose
	# diff
	d = diff
	dc = diff --cached
	ds = diff --staged
	dw = diff --color-words
	# grep
	todo = grep --break --heading -e ' FIXME *' -e ' TODO *'
	# log
	log-graph = log --all --decorate --graph
	log-refs = log --all --decorate --graph --no-merges --oneline --simplify-by-decoration
	log-tree = log --abbrev-commit --all --decorate --graph --pretty=oneline
	# merge
	m = merge --ff-only
	mm = merge
	mn = merge --no-ff
	# pull
	p = pull --rebase
	# shortlog
	contrib = shortlog --no-merges --numbered --summary
	# status
	st = status --branch --short
	# submodule
	sub = submodule
	suba = submodule add
	subf = submodule foreach
	subst = submodule status
	subup = submodule update --init --recursive
	# update-index
	assume = update-index --assume-unchanged
	unassume = update-index --no-assume-unchanged
	# snippets
	assumed = "!git ls-files -v | grep ^h | cut -c 3-"
	unassume-all = "!git assumed | xargs git unassume"
[commit]
	template = ~/.gitmessage
[core]
	excludesfile = ~/.gitignore_global
[include]
	path = .gitconfig_local
[grep]
	linenumber = true
[push]
	default = simple
[rerere]
	enabled = true
[tig]
	mouse = yes
